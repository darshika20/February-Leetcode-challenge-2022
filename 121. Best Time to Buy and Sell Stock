/**
* author: Darshika
* Question Link: https://leetcode.com/problems/best-time-to-buy-and-sell-stock/
* Time Complexity: O(n)
* Space Complexity: O(1)
*/

class Solution {
    public int maxProfit(int[] prices) {
        int bp = Integer.MAX_VALUE;
        int profit = 0;
        for(int price : prices) {
            if(bp > price) {
                bp = price;
            } else {
                profit = Math.max(profit, price- bp);
            }
        }
        return profit;
    }
}
