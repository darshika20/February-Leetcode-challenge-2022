/**
* author: Darshika
* Question Link: https://leetcode.com/problems/subsets/
* Time Complexity: O(2^n)
* Space Complexity: O(2^n * x) x-avg length of subset
*/

class Solution {
    public List<List<Integer>> subsets(int[] nums) {
        List<List<Integer>> res = new ArrayList<>();
        helper(nums,0,res,new ArrayList<>());
        return res;
    }
    
    private void helper(int[] nums, int idx, List<List<Integer>> res, List<Integer> subset) {
        if(idx == nums.length){
            res.add(new ArrayList<>(subset));
            return;
        }
        helper(nums,idx+1,res,subset);
        subset.add(nums[idx]);
        helper(nums,idx+1,res,subset);
        subset.remove(subset.size()-1);
    }
}
