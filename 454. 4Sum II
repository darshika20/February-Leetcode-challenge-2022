/**
* author: Darshika
* Question Link: https://leetcode.com/problems/4sum-ii/
* Time Complexity: O(n^3)
* Space Complexity: O(n^2)
*/

class Solution {
    public int fourSumCount(int[] nums1, int[] nums2, int[] nums3, int[] nums4) {
        Map<Integer,Integer> map = new HashMap<>();
        for(int val : nums1) {
            for(int v : nums2){
                map.put(val+v,map.getOrDefault(val+v,0)+1);
            }
        }
        int res = 0;
        for(int val : nums3){
            for(int v : nums4) {
                if(map.containsKey(0-(val+v))){
                    res += map.get(0-(val+v));
                }
            }
        }
        return res;
    }
}
